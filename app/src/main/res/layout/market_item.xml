<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height">

    <TextView
        android:id="@+id/instrument_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_view_indent"
        android:layout_marginLeft="@dimen/text_view_indent"
        android:layout_marginStart="@dimen/text_view_indent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        tools:text="market_name" />

    <TextView
        android:id="@+id/display_offer_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_view_indent"
        android:layout_marginEnd="@dimen/text_view_indent"
        android:layout_marginRight="@dimen/text_view_indent"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        tools:text="offer" />

</LinearLayout>